# Força o Firefox a reconhecer PNG como favicon
<Files "logo.png">
    Header set Content-Type "image/png"
    Header set Cache-Control "public, max-age=31536000"
</Files>

# Configuração específica para favicon
<Files "logo.png">
    Header set X-Content-Type-Options "nosniff"
</Files>

# Redireciona favicon.ico para logo.png
RewriteEngine On
RewriteRule ^favicon\.ico$ /logo.png [L,R=301]
